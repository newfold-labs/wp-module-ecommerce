/* Import main CSS including all components. */
@import "@newfold/ui-component-library";

@tailwind base;
@tailwind components;
@tailwind utilities;


@keyframes fadeIn {
	from { opacity: 0; }
	to { opacity: 1; }
}

#nfd-quick-add-product__form-wrapper {
	@apply
	nfd-flex;

	animation: fadeIn .5s ease-in-out;

	> * {
		flex-grow: 1;
		flex-shrink: 0;
	}

	.nfd-textarea:focus, .nfd-tag-input:focus-within {
		border-color : var(--nfd-color-primary);
		--tw-ring-color: var(--nfd-color-primary);
	}

	.nfd-textarea {
		resize : none;
	}

	.nfd-quick-add-product__form-field, .nfd-quick-add-product__form-submit {
		@apply
		nfd-mb-4;
	}

	.nfd-quick-add-product__form, .nfd-quick-add-product__form-preview {
		@apply
		nfd-p-6;
	}

	.nfd-quick-add-product__form {
		flex-basis : 45%;

		.nfd-title {
			@apply nfd-mb-5;
		}
	}

	.nfd-quick-add-product__form-submit {
		button {
			@apply
			nfd-mt-4
			nfd-w-full;
		}
	}

	.nfd-quick-add-product__form-preview {
		@apply
		nfd-flex
		nfd-items-center
		nfd-justify-center
		nfd-border-l
		nfd-pointer-events-none
		nfd-border-slate-300
		nfd-bg-gray-100;

		flex-basis: 55%;
	}

	.nfd-quick-add-product__form-preview-product {
		@apply
		nfd-flex
		nfd-gap-4
		nfd-p-4
		nfd-w-full
		nfd-bg-white
		nfd-shadow-md
		nfd-rounded-md;
	}

	.nfd-quick-add-product__form-preview-product-image {
		flex-shrink: 0;
		width: 200px;
	}

	.nfd-quick-add-product__form-preview-product-summary {
		@apply
		nfd-flex
		nfd-flex-col
		nfd-gap-3
		nfd-w-full;

		word-break: break-word;
	}

	.nfd-quick-add-product__form-preview-placeholder {
		@apply
		nfd-w-full
		nfd-h-3;

		background: linear-gradient(90deg, #ededed 25%, #d9d9d9 50%, #ededed 75%);
		background-size: 400% 100%;
	}

	.nfd-quick-add-product__form-preview-product-title {
		@apply
		nfd-text-lg
		nfd-font-medium;
	}

	.nfd-quick-add-product__form-preview-product-price {
		.nfd-quick-add-product__form-preview-placeholder {
			@apply nfd-w-12;
		}
	}

	.nfd-quick-add-product__form-preview-product-description {
		.nfd-quick-add-product__form-preview-placeholder {
			@apply nfd-mb-2;
		}
	}

	.nfd-quick-add-product__form-preview-product-add-to-cart {
		button {
			background-color: var(--wp--preset--color--accent-1, var(--wp--preset--color--primary, var(--nfd-color-primary)));
			color: var(--wp--preset--color--base, #ffffff);
			text-transform: uppercase;
		}
	}

	.nfd-quick-add-product__categories-field {
		position: relative;

		.nfd-tag-input-suggestions {
			@apply
			nfd-absolute
			nfd-z-10
			nfd-w-full
			nfd-mt-1
			nfd-overflow-auto
			nfd-bg-white
			nfd-rounded-md
			nfd-shadow-lg
			nfd-max-h-60
			nfd-ring-1
			nfd-ring-black
			nfd-ring-opacity-5
			focus:nfd-outline-none
			nfd-text-sm;

			li {
				@apply
				nfd-cursor-pointer
				nfd-select-none
				nfd-px-3
				nfd-py-2
				nfd-text-slate-700
				nfd-m-0;

				&:hover {
					@apply nfd-bg-slate-200;
				}
			}
		}
	}

	.nfd-quick-add-product__image-field {
		.nfd-quick-add-product__image-uploader {
			@apply
			nfd-w-full
			nfd-border-2
			nfd-border-dashed
			nfd-rounded-md
			nfd-border-slate-300
			nfd-flex
			nfd-items-center
			nfd-justify-center
			nfd-cursor-pointer
			nfd-font-medium
			nfd-gap-2;

			color : #2271b1;
			height: 65px;

			svg {
				@apply nfd-w-6;
				fill: #2271b1;
			}
		}

		.nfd-quick-add-product__image-preview {
			@apply
			nfd-inline-block
			nfd-relative;

			img {
				@apply
				nfd-border
				nfd-border-slate-300
				nfd-rounded-md;

				height: 65px;
				width: auto;
			}

			.nfd-quick-add-product__image-remove {
				@apply
				nfd-absolute
				-nfd-top-1
				-nfd-right-2
				nfd-inline-flex
				nfd-h-4
				nfd-w-4
				nfd-items-center
				nfd-justify-center
				nfd-rounded-full
				nfd-bg-slate-200
				nfd-text-slate-400
				hover:nfd-bg-slate-300
				hover:nfd-text-slate-500;
			}
		}
	}
}

#nfd-quick-add-product__response {
	@apply
	nfd-flex
	nfd-flex-col
	nfd-gap-2
	nfd-pt-8
	nfd-pb-8
	nfd-pr-6
	nfd-pl-6;

	animation: fadeIn .5s ease-in-out;

	.nfd-quick-add-product__response-data {
		@apply
		nfd-flex
		nfd-rounded-md
		nfd-mb-4
		nfd-p-4
		nfd-gap-4;

		background-color : #f2fcdf;
	}

	.nfd-quick-add-product__response-details {
		@apply
		nfd-flex
		nfd-flex-col
		nfd-gap-1;
	}

	.nfd-quick-add-product__response-product-name {
		@apply
		nfd-text-base
		nfd-font-bold;
	}

	.nfd-quick-add-product__response-product-permalink {
		@apply
		nfd-font-bold;
	}

	.nfd-quick-add-product__response-image {
		@apply
		nfd-inline-block
		nfd-relative;

		img {
			@apply
			nfd-border
			nfd-border-slate-300
			nfd-rounded-md;

			height: 65px;
			width: auto;
		}

		span {
			@apply
			nfd-absolute
			-nfd-top-1
			-nfd-right-2
			nfd-inline-flex
			nfd-h-4
			nfd-w-4
			nfd-items-center
			nfd-justify-center
			nfd-rounded-full;

			background-color: #b4bb30;
		}
	}

	.nfd-button--secondary {
		color: #196bde !important;
	}
}

#nfd_quick_add_product_widget {
	h2 {
		@apply
		nfd-gap-2
		nfd-justify-start;

		&:before {
			@apply
			nfd-w-6
			nfd-h-6;

			content: url('data:image/svg+xml;base64,');
		}
	}

	.inside {
		@apply
		nfd-p-0
		nfd-m-0;
	}

}

#nfd-quick-add-product-modal {
	@apply
	nfd-inline-flex
	nfd-relative
	nfd-ml-1;

	top: -3px;
}

.nfd-root {
	.nfd-quick-add-product-modal {
		z-index: 10000;

		.nfd-modal__panel {
			padding: 0;
			max-width: 75rem;
			width: auto;
		}

		#nfd-quick-add-product__form-wrapper {
			width: 75rem;
			max-width: 100%;
		}

		#nfd-quick-add-product__response {
			width: 30rem;
			max-width: 100%;
		}
	}
}

@media screen and (max-width: 992px) {
	#nfd-quick-add-product__form-wrapper {
		.nfd-quick-add-product__form-preview-placeholder {
			@apply nfd-h-2;
		}

		.nfd-quick-add-product__form-preview-product-image {
			width: 150px;
		}
	}
}

@media screen and (max-width: 782px) {
	.nfd-root {
		.nfd-quick-add-product-modal {
			z-index : 10000;
		}
	}

	#nfd-quick-add-product-modal {
		button {
			@apply
			nfd-py-3
			nfd-px-6
			nfd-text-base
			nfd-leading-5;
		}
	}
}

@media (max-width: 640px) {
	#nfd-quick-add-product__form-wrapper {
		.nfd-quick-add-product__form-preview {
			display: none;
		}
	}
}